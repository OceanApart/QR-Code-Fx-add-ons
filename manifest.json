{

  "description": "Make current tab url into QR Code.",
  "manifest_version": 2,
  "name": "myQR Code",
  "version": "1.0",
  "homepage_url": "https://github.com/OceanApart",
  "icons": {
    "48": "icons/QR-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/QR-32.png",
    "default_title": "QR Code",
    "default_popup": "popup/show_qrcode.html"
  }

}
